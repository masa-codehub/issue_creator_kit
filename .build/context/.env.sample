# CONTAINER
ROOT="/root"
CONTAINER_VOLUME="/app"
MESSAGE_DIR="${CONTAINER_VOLUME}/messages"

# BROKER
BROKER_NAME="github_broker"
BROKER_PORT=8000
GITHUB_REPOSITORY="my_account/my_repository"

# AGENT CONFIGURATION FILE
# エージェントの役割定義ファイル (agents.yml) のパス。
# デフォルトは /app/agents.yml。
AGENT_CONFIG_PATH="/app/agents.yml"

# GITHUB_TOKEN
GITHUB_MCP_PAT ="my_github_token"

# GEMINI
GEMINI_API_KEY="my_gemini_api_key"
GOOGLE_CLOUD_PROJECT="my_google_cloud_project"
GOOGLE_CLOUD_LOCATION="my_google_cloud_location"
GOOGLE_CLOUD_ACCESS_KEY="gemini-access-key.json"
